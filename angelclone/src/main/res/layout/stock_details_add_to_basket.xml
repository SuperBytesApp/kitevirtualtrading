<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:tag="layout/stock_details_add_to_basket_0"
    app:backgroundColor="@color/white_color"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/white_color">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateBasket"
            style="@style/barlowBoldLarge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="@drawable/bg_border_button_fill_clr"
            android:drawableStart="@drawable/ic_basket"
            android:drawableEnd="@drawable/ic_arrow_right_rounded"
            android:drawablePadding="@dimen/dp_8"
            android:fontFamily="@font/app_font_medium"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/add_to_basket"
            android:textAllCaps="true"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
