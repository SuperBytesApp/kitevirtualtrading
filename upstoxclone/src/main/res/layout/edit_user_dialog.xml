<!-- edit_user_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/newNameEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:paddingStart="10dp"
            android:textAllCaps="true"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QTY"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/newEmailEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Qty"
            android:paddingStart="10dp"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Price"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Avg Price"
            android:paddingStart="10dp"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTP Price"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/newValidityEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="LTP"
            android:paddingStart="10dp"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/Profit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Profit"
            android:text="+0.00"
            android:paddingStart="10dp"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%Profit"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/percentprofit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="+18.13%"
            android:paddingStart="10dp"
            android:textAllCaps="true"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ltp % Profit"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ltpprofit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="(+00.13%)"
            android:paddingStart="10dp"
            android:minHeight="56dp"
            android:layout_marginBottom="10dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit / Loss"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup1">

            <RadioButton
                android:id="@+id/radioButton2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profit" />

            <RadioButton
                android:id="@+id/radioButton2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loss" />
        </RadioGroup>



    </LinearLayout>




</LinearLayout>
